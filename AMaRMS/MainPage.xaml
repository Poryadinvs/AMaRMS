<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMaRMS.MainPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Button Text="Оборудование" Margin="0,0,0,10" BorderColor="Black" BorderWidth="1" BackgroundColor="AliceBlue" TextColor="Black" Clicked="OnEquipmentClicked"/>
            <Button Text="График обслуживания" Margin="0,0,0,10" BorderColor="Black" BorderWidth="1" BackgroundColor="AliceBlue" TextColor="Black" Clicked="OnMaintenanceScheduleClicked"/>
            <Button Text="Выполненные работы" Margin="0,0,0,10" BorderColor="Black" BorderWidth="1" BackgroundColor="AliceBlue" TextColor="Black" Clicked="OnMaintenanceRecordClicked"/>
            <Button Text="Запасные части" Margin="0,0,0,10" BorderColor="Black" BorderWidth="1" BackgroundColor="AliceBlue" TextColor="Black" Clicked="OnSparePartsClicked"/>
            <Button Text="Рабочие заказы" Margin="0,0,0,10" BorderColor="Black" BorderWidth="1" BackgroundColor="AliceBlue" TextColor="Black" Clicked="OnWorkOrdersClicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
